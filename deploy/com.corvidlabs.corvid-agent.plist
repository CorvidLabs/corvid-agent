<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.corvidlabs.corvid-agent</string>

    <key>ProgramArguments</key>
    <array>
        <string>__BUN_PATH__</string>
        <string>server/index.ts</string>
    </array>

    <key>WorkingDirectory</key>
    <string>__WORKING_DIR__</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PORT</key>
        <string>3000</string>
        <key>LOG_LEVEL</key>
        <string>info</string>
        <key>NODE_ENV</key>
        <string>production</string>
    </dict>

    <key>RunAtLoad</key>
    <true/>

    <!--
        Restart policy: restart on non-zero exit only.
        ThrottleInterval prevents crash-loop CPU burn â€” launchd will wait at
        least this many seconds before restarting after a failure.
        Note: launchd has no equivalent to systemd's StartLimitBurst, so a
        persistently broken config will still restart every 30s. Monitor logs.
    -->
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>

    <key>ThrottleInterval</key>
    <integer>30</integer>

    <key>StandardOutPath</key>
    <string>__LOG_DIR__/corvid-agent.stdout.log</string>

    <key>StandardErrorPath</key>
    <string>__LOG_DIR__/corvid-agent.stderr.log</string>

    <key>SoftResourceLimits</key>
    <dict>
        <key>NumberOfFiles</key>
        <integer>4096</integer>
    </dict>
</dict>
</plist>
